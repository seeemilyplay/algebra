<?xml version="1.0" encoding="UTF-8"?>
<template xmlns="http://napkinlaf.sf.net/sketch/"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <title>Pointer N</title>
    <description>a pointer that goes in a N direction</description>
    <clippingBounds>
        <dimensions>
            <width>32</width>
            <height>32</height>
        </dimensions>
    </clippingBounds>
    
    <!-- the arrow body -->
    <templateItem>
      <drawStroke>true</drawStroke>
      <drawFill>true</drawFill>
      <strokeColor>
            <r>94</r>
            <g>7</g>
            <b>255</b>
      </strokeColor>
      <fillColor>
            <r>94</r>
            <g>7</g>
            <b>255</b>
      </fillColor>
      <path>
            <moveTo>
                <point>
                    <x>15</x>
                    <y>22</y>
                </point>
            </moveTo>
            <lineTo>
                <point>
                    <x>15</x>
                    <y>0</y>
                </point>
            </lineTo>
            <lineTo>
                <point>
                    <x>16</x>
                    <y>0</y>
                </point>
            </lineTo>
            <lineTo>
                <point>
                    <x>16</x>
                    <y>22</y>
                </point>
            </lineTo>
        </path>
    </templateItem>
    
    <!-- the left part of the arrow head -->
    <templateItem>
      <drawStroke>true</drawStroke>
      <drawFill>true</drawFill>
      <strokeColor>
            <r>94</r>
            <g>7</g>
            <b>255</b>
      </strokeColor>
      <fillColor>
            <r>94</r>
            <g>7</g>
            <b>255</b>
      </fillColor>
      <path>
            <moveTo>
                <point>
                    <x>10</x>
                    <y>8</y>
                </point>
            </moveTo>
            <lineTo>
                <point>
                    <x>16</x>
                    <y>0</y>
                </point>
            </lineTo>
            <lineTo>
                <point>
                    <x>15</x>
                    <y>0</y>
                </point>
            </lineTo>
            <lineTo>
                <point>
                    <x>9</x>
                    <y>7</y>
                </point>
            </lineTo>
        </path>
    </templateItem>
    
    <!-- the right part of the arrow head -->
    <templateItem>
      <drawStroke>true</drawStroke>
      <drawFill>true</drawFill>
      <strokeColor>
            <r>94</r>
            <g>7</g>
            <b>255</b>
      </strokeColor>
      <fillColor>
            <r>94</r>
            <g>7</g>
            <b>255</b>
      </fillColor>
      <path>
            <moveTo>
                <point>
                    <x>21</x>
                    <y>8</y>
                </point>
            </moveTo>
            <lineTo>
                <point>
                    <x>15</x>
                    <y>0</y>
                </point>
            </lineTo>
            <lineTo>
                <point>
                    <x>16</x>
                    <y>0</y>
                </point>
            </lineTo>
            <lineTo>
                <point>
                    <x>22</x>
                    <y>7</y>
                </point>
            </lineTo>
        </path>
    </templateItem>
   
</template>
