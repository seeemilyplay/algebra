<?xml version="1.0" encoding="UTF-8"?>
<template xmlns="http://napkinlaf.sf.net/sketch/"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <title>Pointer SE</title>
    <description>a pointer that goes in a SE direction</description>
    <clippingBounds>
        <dimensions>
            <width>32</width>
            <height>32</height>
        </dimensions>
    </clippingBounds>
    
    <!-- the arrow body -->
    <templateItem>
      <drawStroke>true</drawStroke>
      <drawFill>true</drawFill>
      <strokeColor>
            <r>94</r>
            <g>7</g>
            <b>255</b>
      </strokeColor>
      <fillColor>
            <r>94</r>
            <g>7</g>
            <b>255</b>
      </fillColor>
      <path>
            <moveTo>
                <point>
                    <x>0</x>
                    <y>10</y>
                </point>
            </moveTo>
            <lineTo>
                <point>
                    <x>32</x>
                    <y>23</y>
                </point>
            </lineTo>
            <lineTo>
                <point>
                    <x>32</x>
                    <y>24</y>
                </point>
            </lineTo>
            <lineTo>
                <point>
                    <x>0</x>
                    <y>11</y>
                </point>
            </lineTo>
        </path>
    </templateItem>
    
    <!-- the left side of the arrow head -->
    <templateItem>
      <drawStroke>true</drawStroke>
      <drawFill>true</drawFill>
      <strokeColor>
            <r>94</r>
            <g>7</g>
            <b>255</b>
      </strokeColor>
      <fillColor>
            <r>94</r>
            <g>7</g>
            <b>255</b>
      </fillColor>
      <path>
            <moveTo>
                <point>
                    <x>12</x>
                    <y>28</y>
                </point>
            </moveTo>
            <lineTo>
                <point>
                    <x>32</x>
                    <y>24</y>
                </point>
            </lineTo>
            <lineTo>
                <point>
                    <x>32</x>
                    <y>23</y>
                </point>
            </lineTo>
            <lineTo>
                <point>
                    <x>12</x>
                    <y>27</y>
                </point>
            </lineTo>
        </path>
    </templateItem>
    
    <!-- the right side of the arrow head -->
    <templateItem>
      <drawStroke>true</drawStroke>
      <drawFill>true</drawFill>
      <strokeColor>
            <r>94</r>
            <g>7</g>
            <b>255</b>
      </strokeColor>
      <fillColor>
            <r>94</r>
            <g>7</g>
            <b>255</b>
      </fillColor>
      <path>
            <moveTo>
                <point>
                    <x>26</x>
                    <y>8</y>
                </point>
            </moveTo>
            <lineTo>
                <point>
                    <x>32</x>
                    <y>23</y>
                </point>
            </lineTo>
            <lineTo>
                <point>
                    <x>32</x>
                    <y>24</y>
                </point>
            </lineTo>
            <lineTo>
                <point>
                    <x>25</x>
                    <y>9</y>
                </point>
            </lineTo>
        </path>
    </templateItem>
    
</template>
